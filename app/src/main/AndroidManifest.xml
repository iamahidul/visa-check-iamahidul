<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.chillbox.visacheckonline">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="applovin.sdk.key"
            android:value="aT4sVGzGxwLUus_c-lkvq6GUftC09GxMKmQfOoXH0QBJ4wWQe5LHJgJZ0co64KEkbOBTqEluDeZCdal2M7LeZU"/>

        <activity
            android:name=".Notifications"
            android:label="@string/act_notifications"
            android:parentActivityName=".ItemActivity" >



            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemActivity" />


        </activity>
        <activity android:name=".ItemActivity"/>
        <activity android:name=".splash">


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemWebView"
            android:label="@string/title_activity_news_web_view"
            android:parentActivityName=".ItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemActivity" />
        </activity>

    </application>

</manifest>